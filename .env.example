# Copy this file to `.env` and fill in your values.
# docker compose automatically reads `.env` from the same directory.

# Built-in Freqtrade Telegram (optional, defaults disabled in config)
# Set to true to enable built-in Telegram bot
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Freqtrade REST basic auth (used by both bot and reporter)
FREQTRADE_API_USERNAME=YOUR_USERNAME
FREQTRADE_API_PASSWORD=YOUR_PASSWORD

# Reporter settings (optional)
REPORT_INTERVAL_SECONDS=1800
TELEGRAM_SILENT=true
REPORT_INCLUDE_PAIRLIST=true
REPORT_PAIRLIST_STYLE=columns  # list | columns
REPORT_PAIRLIST_LIMIT=30

# Optional: Exchange API keys (not needed for dry-run)
#FREQTRADE__EXCHANGE__KEY=
#FREQTRADE__EXCHANGE__SECRET=
#FREQTRADE__EXCHANGE__PASSWORD=

