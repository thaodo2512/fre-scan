{
  "_comment": "Sample Freqtrade configuration for Docker-based development with dynamic pairlists.",
  "_comment_general": "General bot identity and trading mode settings.",
  "bot_name": "freqtrade-docker-sample",
  "strategy": "SampleStrategy",
  "timeframe": "5m",
  "stake_currency": "USDT",
  "stake_amount": "unlimited",
  "dry_run": true,
  "dry_run_wallet": 1000,

  "_comment_exchange": "Exchange configuration with placeholder API credentials.",
  "exchange": {
    "name": "binance",
    "key": "YOUR_API_KEY",
    "secret": "YOUR_API_SECRET",
    "password": "YOUR_API_PASSWORD",
    "ccxt_config": {},
    "ccxt_async_config": {},
    "pair_whitelist": [],
    "pair_blacklist": []
  },

  "_comment_pairlists": "Dynamic pairlist combining volume, age, volatility, performance, spread, range stability, and shuffle filters.",
  "pairlists": [
    {
      "name": "VolumePairList",
      "config": {
        "number_assets": 50,
        "sort_key": "quoteVolume",
        "min_value": 1000000,
        "refresh_period": 1800
      }
    },
    {
      "name": "AgeFilter",
      "config": {
        "min_days_listed": 10
      }
    },
    {
      "name": "VolatilityFilter",
      "config": {
        "lookback_days": 10,
        "min_volatility": 0.05,
        "max_volatility": 0.5,
        "refresh_period": 1800
      }
    },
    {
      "name": "PerformanceFilter",
      "config": {
        "lookback_days": 10,
        "min_profit": 0.01,
        "refresh_period": 1800
      }
    },
    {
      "name": "SpreadFilter",
      "config": {
        "max_spread": 0.005,
        "refresh_period": 1800
      }
    },
    {
      "name": "RangeStabilityFilter",
      "config": {
        "lookback_days": 7,
        "min_rate_of_change": 0.05,
        "refresh_period": 1800
      }
    },
    {
      "name": "ShuffleFilter",
      "config": {}
    }
  ],

  "_comment_telegram": "Telegram notifications with placeholders for bot token and chat identifier.",
  "telegram": {
    "enabled": true,
    "token": "YOUR_TELEGRAM_BOT_TOKEN",
    "chat_id": "YOUR_TELEGRAM_CHAT_ID"
  },

  "_comment_api_server": "REST API exposed via Docker on port 8080 secured with basic authentication.",
  "api_server": {
    "enabled": true,
    "listen_ip_address": "0.0.0.0",
    "listen_port": 8080,
    "username": "YOUR_USERNAME",
    "password": "YOUR_PASSWORD",
    "verbosity": "info"
  },

  "_comment_datadir": "Data directory mapping aligned with Docker volume mounts.",
  "dataformat_ohlcv": "json",
  "datadir": "user_data/data"
}
